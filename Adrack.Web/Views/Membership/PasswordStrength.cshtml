@{
    Layout = null;
}

<script>
    $(document).ready(function() {
        passwordScore = runPassword($('#@ViewBag.PasswordElement').val(), 'pwd');

        $('#@ViewBag.PasswordElement').on('keyup',
            function() {
                passwordScore = runPassword($(this).val(), 'pwd');
            });

        $('#@ViewBag.PasswordElement').on('change',
            function() {
                passwordScore = runPassword($(this).val(), 'pwd');
            });
    })
</script>

<div style="margin-top: -15px">
    <label style="color: lightgray; font-size: 10px">Password strength</label><br />
    <div style="background-color: lightgray; width: 50%;">
        <div id="pwd_bar" style="height: 5px; width: 100%;"></div>
    </div>
</div>