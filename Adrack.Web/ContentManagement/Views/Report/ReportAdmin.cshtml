    <tr>
        <td width="250">
            Range
        </td>
        <td></td>
    </tr>
    <tr>
        <td width="200">
            <div class="input-group">
                <span class="input-group-addon"><i class="icon-calendar22"></i></span>
                <input id="startDate" type="text" class="form-control daterange-single" value="">
            </div>
        </td>
